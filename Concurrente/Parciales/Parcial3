programa Parcial3
procesos
  proceso arriba
  comenzar
    repetir 3
      derecha
  fin
  proceso juntarPapeles
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
  fin
  proceso depositarPapeles
  variables
    caIni,avIni:numero
  comenzar
    caIni:= PosCa
    avIni:= PosAv
    BloquearEsquina(99,99)
    Pos(99,99)
    mientras HayPapelEnLaBolsa
      depositarPapel
    Pos(avIni,caIni)
    LiberarEsquina(99,99)
  fin
areas
  ciudadP: AreaPC(2,1,100,50)
  ciudadC: AreaC(99,99,99,99)
  ciudadJ: AreaP(1,1,1,1)
robots
  robot papelero
  variables
    caIni,avIni,id,alto,ancho:numero
    ok:boolean
  comenzar
    RecibirMensaje(id,fiscal)
    Random(alto,1,4)
    Random(ancho,1,2)
    repetir 4
      repetir alto
        mover
      derecha
      depositarPapeles 
      repetir ancho
        mover
      arriba
      depositarPapeles
      EnviarMensaje(V,fiscal)
      RecibirMensaje(ok,fiscal)
  fin
  robot fiscalizador
  variables
    ok:boolean
    tamanio,id,cant:numero
  comenzar
    EnviarMensaje(1,p1)
    EnviarMensaje(2,p2)
    EnviarMensaje(3,p3)
    repetir 4
      repetir 3
        RecibirMensaje(ok,*)
      EnviarMensaje(V,p1)
      EnviarMensaje(V,p2)
      EnviarMensaje(V,p3)
    Pos(99,99)
    mientras HayPapelEnLaEsquina
      tomarPapel
      cant := cant + 1
    Informar(cant)
  fin
variables
  p1: papelero
  p2: papelero
  p3: papelero
  fiscal: fiscalizador
comenzar
  AsignarArea(p1,ciudadP)
  AsignarArea(p2,ciudadP)
  AsignarArea(p3,ciudadP)
  AsignarArea(p1,ciudadC)
  AsignarArea(p2,ciudadC)
  AsignarArea(p3,ciudadC)
  AsignarArea(fiscal,ciudadC)
  AsignarArea(fiscal,ciudadJ)
  Iniciar(fiscal,1,1)
  Iniciar(p1,2,1)
  Iniciar(p2,12,1)
  Iniciar(p3,22,1)
fin
